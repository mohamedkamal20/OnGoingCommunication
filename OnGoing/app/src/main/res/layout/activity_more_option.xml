<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/back1"
    >
<LinearLayout  android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context="com.example.maged.ongoing.MoreOption">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4"
    >
  <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Home"
      android:textSize="16sp"
      android:textStyle="bold|italic"
      android:id="@+id/homeback"
      />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Profile"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:id="@+id/Profileback"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Options"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:id="@+id/optionsback"
        android:background="#ff4ffff3"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Log Out"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:id="@+id/logout"
        />



</LinearLayout>
<Button
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add New Place"
    android:id="@+id/add_new_place"
    android:textSize="20sp"
    android:textStyle="bold|italic"
    android:textColor="#000000"
    />
 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:weightSum="2"
     >
 <Button
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:id="@+id/favplace"
     android:text="Save place"
     android:textSize="20sp"
     android:textStyle="bold|italic"
     android:textColor="#000000"
     android:layout_weight="1"
     />
 <EditText
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_weight="1"
     android:hint="Enter place name"
     android:textSize="20dp"
     android:textStyle="italic"
     android:id="@+id/favplacetext"
     android:textColor="#ff9efffd"
     android:textColorHint="#ff9efffd"
     />
 </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="save place result..."
        android:textSize="20sp"
        android:textStyle="italic"
        android:id="@+id/save_place_result"
        android:textColor="#ff9efffd"
        android:textColorHint="#ff9efffd"

        />
</LinearLayout>
</ScrollView>