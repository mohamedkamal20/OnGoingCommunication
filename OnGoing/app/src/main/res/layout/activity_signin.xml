<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back7"
    >
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".signin"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:color="#CCCCCC"


        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userName"
            android:hint="Username"
            android:textColor="#ff9efffd"
            android:textColorHint="#ff9efffd"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:hint="Password"
            android:textColor="#ff9efffd"
            android:textColorHint="#ff9efffd"
            android:inputType="textPassword"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Login"
            android:id="@+id/login"
            android:textStyle="bold|italic"
            android:textColor="#ff020504"
            android:background="@drawable/but3"


            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Sign up"
            android:id="@+id/signup"
            android:textStyle="bold|italic"
            android:textColor="#ff020504"
            android:layout_marginTop="10dp"
            android:background="@drawable/but3"

            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/text"
            android:textColor="#ffff2ebc"

            />

    </LinearLayout>


</LinearLayout>
</ScrollView>